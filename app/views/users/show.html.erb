<h1> <%= @user.name %>'s Profile </h1>
<% if current_user == @user %>
  <%= link_to 'Create new photo', new_photo_path %>
<% end %>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= image_tag photo.avatar.thumb.url %></td>
        <td><%= link_to photo.name, photo %></td>
        <% if current_user == @user %>
          <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>