<h1>Photo Gallery</h1> 
	<p id="notice"><%= notice %></p>     
  <div class="row">
    <div class="col-sm-7">
      <% @photos.each do |photo| %>
        <div class="container-fluid" style="border:1px solid;">
       		<%= image_tag(photo.avatar.url,size:"213") %>
          <% if current_user.try(:admin?) %>
            <p><%= link_to photo.name, photo_path(photo) %></p>
          <% else %>
            <p><%= photo.name %></p>
						<p>By:<%= photo.user.name %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>